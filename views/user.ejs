<!DOCTYPE html>
<html>
    <head>
        <title>Users</title>
    </head>
    <body>
        <h1>User item</h1>
        <a href = "/users/new">Add new user</a>
        <ul>
            <% items.forEach (user => { %>
            <li>
                <a href = "/users/<%= user._id %>"> <%= user.name %> </a>
                <form action="/users/<%= user._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </li>
            <% }) %>
        </ul>
    </body>
</html>